@tailwind base;
@tailwind components;
@tailwind utilities;
@tailwind variants;

.dark .accordion-border {
	border: 2px solid #333333;
	border-radius: 0.375rem;
}

.accordion-border {
	border: 2px solid #e5e7eb;
	border-radius: 0.375rem;
}

html,
body {
	@apply h-full;
}

:root [data-theme='wintry'] {
	--theme-rounded-base: 4px;
	--theme-rounded-container: 4px;
}

body {
	background: #e9ecf0;
	background-image: none;
}
.dark body {
	background: #0e1218;
	background-image: none;
}
